# Fixed Weight Strategy Configuration
name: fixed_weight_strategy
strategy: fixed_weight
rebalance_frequency: ME
position_sizer: fixed_weights
train_window_months: 36
test_window_months: 48
optimization_metric: Total Return
optimize:
  - parameter: weights.SPY
    min_value: 0.0
    max_value: 1.0
    step: 0.05
  - parameter: weights.GLD
    min_value: 0.0
    max_value: 1.0
    step: 0.05
strategy_params:
  fixed_weight.weights.SPY: 0.6
  fixed_weight.weights.GLD: 0.4
mc_simulations: 1000
mc_years: 10